<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MtSparked.UI.Views.CardsListPage"
             Title="{Binding Title}"
             x:Name="CardsList"
             xmlns:views="clr-namespace:MtSparked.UI.Views">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sort By" Clicked="SortBy" />
        <ToolbarItem Text="Toggle Unique" Clicked="ToggleUnique"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ListView x:Name="CardsListView" 
                 ItemsSource="{Binding Items}"
                 ItemSelected="OnItemSelected"
                 RowHeight="64"
                 IsGroupingEnabled="True"
                 GroupDisplayBinding="{Binding Key}"
                 GroupShortNameBinding="{Binding ShortName}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <views:CardItemView/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>