<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gatherer.Views.SearchGroupCell">
    <StackLayout HorizontalOptions="Fill">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Picker SelectedItem="{Binding Connector}" HorizontalOptions="Fill" Grid.Column="0">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>All</x:String>
                        <x:String>Any</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Add Criteria" Clicked="AddItem" HorizontalOptions="Fill" Grid.Column="1"/>
            <Button Text="Add Group" Clicked="AddGroup" HorizontalOptions="Fill" Grid.Column="2"/>
            <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Grid.Column="3">
                <Label Text="Negate"/>
                <Switch HorizontalOptions="Center" IsToggled="{Binding Negated}"/>
            </StackLayout>
        </Grid>
        <StackLayout x:Name="StackLayout" Orientation="Vertical"/>
    </StackLayout>
</ContentView>